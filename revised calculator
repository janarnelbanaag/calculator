using System;  
using System.Collections.Generic;  
using System.Linq;  
using System.Text;  
using System.Threading.Tasks;  
namespace Calculator {  
    class Program {  
        static void Main(string[] args) {  
            Console.WriteLine("Enter the number for an operation to be performed");  
            Console.WriteLine("Press 1 for Addition");  
            Console.WriteLine("Press 2 for Subtraction");  
            Console.WriteLine("Press 3 for Multiplication");  
            Console.WriteLine("Press 4 for Division \n");  
            int action = Convert.ToInt32(Console.ReadLine());  
            Console.WriteLine("Enter 1st number");  
            int number_1 = Convert.ToInt32(Console.ReadLine());  
            Console.WriteLine("Enter 2nd number");  
            int number_2 = Convert.ToInt32(Console.ReadLine());  
            int result = 0;  
            switch (action) {  
                case 1: {  
                    result = Addition(number_1, number_2);  
                    break;  
                }  
                case 2: {  
                    result = Subtraction(number_1, number_2);  
                    break;  
                }  
                case 3: {  
                    result = Multiplication(number_1, number_2);  
                    break;  
                }  
                case 4: {  
                    result = Division(number_1, number_2);  
                    break;  
                }  
                default:  
                    Console.WriteLine("Error!! Please try again");  
                    break;  
            }  
            Console.WriteLine("The result is {0}", result);  
            Console.ReadKey();  
        }  
        //Addition  
        public static int Addition(int number_1, int number_2) {  
        	Console.WriteLine("You chose addition as your operation!"); 
            int result = number_1 + number_2;  
            return result;  
        }  
        //Substraction  
        public static int Subtraction(int number_1, int number_2) {  
        	Console.WriteLine("You chose subtraction as your operation!");
            int result = number_1 - number_2;  
            return result;  
        }  
        //Multiplication  
        public static int Multiplication(int number_1, int number_2) { 
			Console.WriteLine("You chose multiplication as your operation!");        	
            int result = number_1 * number_2;  
            return result;  
        }  
        //Division  
        public static int Division(int number_1, int number_2) {  
        	Console.WriteLine("You chose division as your operation!");
            int result = number_1 / number_2;  
            return result;  
        }  
    }  
} 
